{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "NodeNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"target": "ES2020"
	},
	"include": ["vite.config.ts", "src/**/*"]
}
